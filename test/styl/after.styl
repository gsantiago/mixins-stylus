.element
  width 100px
  height 100px
  margin 100px auto
  +after()
    width 50px
    height 50px
    background-color #000
    position absolute
    top 0
    left 0

.only-fill-content
  after('Just the content property')

.content-and-block
  +after('content')
    position absolute
    top 0
    left 0
    background-color #fff
